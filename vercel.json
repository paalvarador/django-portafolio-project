{
  "builds": [
    {
      "src": "django_portafolio/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "1024mb", "runtime": "python3.9" }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles_build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/media/(.*)",
      "dest": "/media/$1"
    },
    {
      "src": "/(.*)",
      "dest": "django_portafolio/wsgi.py"
    }
  ]
}
